{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
  
